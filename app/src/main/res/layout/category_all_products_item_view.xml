<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categConstraintAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/categoprodimg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nail" />

            <TextView
                android:id="@+id/categoprodfirst"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2dp"
                android:text="NY Bae pretty pastels nail paint | Glossy Finish | Chip Resistant Cruelity free"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/categoprodsecond"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoprodimg" />

            <TextView
                android:id="@+id/categoprodsecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="2dp"
                android:text="₹123"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/openProduct"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/openProduct"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:text="Buy Now"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="#F78195" />


            <TextView
                android:id="@+id/newArrivalThirdscad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/gilroy_semibold"
                android:text="₹399"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/categoprodsecond"
                app:layout_constraintStart_toEndOf="@+id/categoprodsecond"
                app:layout_constraintTop_toTopOf="@+id/categoprodsecond" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#4C4C4C"
                app:layout_constraintBottom_toBottomOf="@+id/newArrivalThirdscad"
                app:layout_constraintEnd_toEndOf="@+id/newArrivalThirdscad"
                app:layout_constraintStart_toStartOf="@+id/newArrivalThirdscad"
                app:layout_constraintTop_toTopOf="@+id/newArrivalThirdscad" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>



